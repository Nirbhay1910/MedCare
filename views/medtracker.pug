doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/stylemed.css')
  title Document
#slideout-menu
  ul
    li
      a(href='/') Home
    li
      a(href='/medtracker') Medicine Timer
    li
      a(href='/contact') Contact Ambulance
    li
      a(href='/aboutcovid') Covid-19 Precautions
    li
      input(type='text' placeholder='Search Here')
    if user
      li
        a(href='#')= `Hi, ${user.name}`
      li
        a(href='#') Logout
    else
      li
        a(href='/login') Log in
      li
        a(href='/signup') Sign up
nav
  #logo-img
    a(href='#')
      img(src='/img/logo.jpg' alt='Medcare Logo')
  #menu-icon
    i.fas.fa-bars
  ul
    li
      a.active(href='/') Home
    li
      a(href='/medtracker') Medicine Timer
    li
      a(href='/doctors') Contact Doctor
    li
      a(href='/aboutcovid') Covid-19 Precautions
    if user
      li
        a(href='#')
          img#user-photo(src=`/img/users/${user.photo}`)
      li
        a(href='/me')= `Hi, ${user.name}`
      li
        a(id='logoutbtn' href='#') Logout
    else
      li
        a(href='/login') Log in
      li
        a(href='/signup') Sign up
    li
      #search-icon
        i.fas.fa-search

.container
  h2 Medicine Scheduler
  h3 Add Item
  p
    input#new-task(type='text')
    button Add
  h3 Todo
  ul#incomplete-tasks
    each med in medsAct
      li
        input(type='checkbox')
        label.ActiveMeds= `${med.name}`
        input(type='text')
        button.edit Edit
        button.delete Delete
  h3 Completed
  ul#completed-tasks
    each med in medsNotAct 
      li
        input(type='checkbox' checked='true')
        label.notActiveMeds= `${med.name}`
        input(type='text')
        button.edit Edit
        button.delete Delete
  Button#saveMed save changes
